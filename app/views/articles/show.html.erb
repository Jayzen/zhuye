<% unless current_user.has_role?(:root_admin) %>
  <%= render 'shared/nav' %>
<% end -%>
<div class="row">
  <div class="col-md-3"><%= render 'shared/left_bar' %></div>
  <div class="col-md-9">
    <div class="card mb-3">
      <div class="card-header text-secondary text-center"><%= @article.title %></div>
      <div class="card-body">
        <div class="text-secondary text-center">
          <p><small>
            <% if @article.tag %>
              <i class="fa fa-tag fa-fw"></i><%= @article.tag.name %> ·
            <% end -%>
            <i class="fa fa-user fa-fw"></i><%= @article.user.email.split("@").first %>
            · 发表于<%= time_ago_in_words(@article.created_at) %>前
          </small></p>
        </div>
        <div class="text-secondary" id="picture"><%= markdown @article.content %></div>
      </div>
    </div> 
    <div><%= link_to "列表", articles_path, class: "btn btn-primary" %></div>
  </div>
</div>
<%= render 'shared/simplemde_style' %>
