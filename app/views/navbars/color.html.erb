<%= render 'shared/nav' %>
<div class="row">
  <div class="col-md-3"><%= render 'shared/style_left_bar' %></div>
  <div class="card col-md-9">
    <div class="card-body">
      <%= form_for(@navbar, url: set_color_navbars_path(@navbar), method: :put ) do |f| %>
        <div class="form-group">
          <% ["text-primary", "text-secondary", "text-success", "text-danger", "text-warning", "text-info", "text-light", "text-dark", "text-muted", "text-white"].each do |color| %>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="navbar[color]"  value="<%= color %>"  <%= @navbar.color == "#{color}" ? "checked" : ""%>>
              <label class="form-check-label <%= color %>">
                字体颜色
              </label>
            </div>
          <% end -%>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class: "btn btn-primary"%>
        </div>
      <% end -%>
    </div>
  </div>
  </div>
</div>
