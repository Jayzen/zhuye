<%= render 'shared/nav' %>
<div class="row">
  <div class="col-md-3"><%= render 'shared/style_left_bar' %></div>
  <div class="card col-md-9">
    <div class="card-body">
      <%= form_for(:options, url: set_style_options_path(current_user), method: :put ) do |f| %>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option[style]"  value=""  <%= current_user.style == "" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              不出现基本信息栏
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option[style]"  value="left" <%= current_user.style == "left" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              基本信息栏放置在左边
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option[style]"  value="right" <%= current_user.style == "right" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              基本信息栏放置在右边
            </label>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "更新样式", class: "btn btn-primary"%>
        </div>
      <% end -%> 
    </div>
  </div>
  </div>
</div>
