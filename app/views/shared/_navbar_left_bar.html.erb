<div class="card">
  <div class="card-body d-flex flex-column">
    <div class="mt-2">
      <%= link_to "导航栏排序", order_navbars_path, class: "btn #{ (action_name == 'order') ? 'btn-primary' : 'btn-outline-secondary' }  btn-block" %>
    </div>
    <div class="mt-2">
      <%= link_to "导航栏修改", modify_navbars_path, class: "btn #{ (action_name == 'modify') ? 'btn-primary' : 'btn-outline-secondary' }  btn-block" %>
    </div>
    <div class="mt-2">
      <%= link_to "导航栏位置", position_navbars_path, class: "btn #{ (controller_name == 'navbars' && action_name == 'position') ? 'btn-primary' : 'btn-outline-secondary' }  btn-block" %>
    </div>
  </div>
</div>
