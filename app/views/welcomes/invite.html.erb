<div class="mb-2">
  <%= render 'shared/show_middle' %>
</div>
<div class="row">
  <% if @basic_contact == "left" %>
    <div class="col-md-3"><%= render 'shared/contact' %></div>
  <% end -%>
  <div class="<%= @basic_contact == '' ? 'col-md-12' : 'col-md-9' %>">
    <div class="card">
      <div class="card-header text-secondary text-center"><%= @recruit.title %></div>
      <div class="card-body">
        <div class="text-secondary text-center">
          <p><small>
            <i class="fa fa-user fa-fw"></i><%= @recruit.user.email.split("@").first %>
            · 发表于<%= time_ago_in_words(@recruit.created_at) %>前
          </small></p>
        </div>
        <div id="picture">
          <%= markdown @recruit.content if @recruit %>
        </div>
      </div>
    </div>
    <div class="mt-2"><%= link_to "返回", apply_path, class: "btn btn-primary" %></div>
  </div>
  <% if @basic_contact == "right" %>
    <div class="col-md-3"><%= render 'shared/contact' %></div>
  <% end -%>
</div>
<%= render 'shared/simplemde_style' %>
